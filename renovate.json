{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platform": "github",
  "onboarding": false,
  "requireConfig": "optional",
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>",
  "packageRules": [
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions"
    },
    {
      "matchManagers": [
        "bundler"
      ],
      "groupName": "Ruby dependencies"
    },
    {
      "matchManagers": [
        "gradle",
        "gradle-wrapper"
      ],
      "matchPackageNames": [
        "gradle"
      ],
      "groupName": "Build system"
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "groupName": "App dependencies",
      "matchPackageNames": [
        "/^androidx\\./",
        "/^com\\.google\\.android/",
        "/^org\\.jetbrains\\.kotlin/",
        "/^com\\.google\\.dagger/",
        "/^com\\.squareup\\.retrofit/",
        "/^com\\.squareup\\.okhttp/",
        "/^com\\.squareup\\.moshi/"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ],
  "gradle": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ],
    "assignees": []
  },
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "disabled",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 0,
  "timezone": "UTC",
  "assignees": [],
  "reviewers": []
}
